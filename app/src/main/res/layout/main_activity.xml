<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Leak from static references:" />

  <Button
    android:id="@+id/activityStaticLeakButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Leak Static Activity Reference" />

  <Button
    android:id="@+id/activityStaticCleanButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Clean Static Activity Reference" />

</LinearLayout>